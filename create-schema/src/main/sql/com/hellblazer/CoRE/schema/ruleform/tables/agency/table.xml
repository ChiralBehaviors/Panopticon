<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>
    <changeSet author="hhildebrand" id="1390879803225-2">
        <createTable remarks="A agency is an actor in the system.  It has the ability to do work, produce and consume products"
            tableName="ruleform.agency"
        >
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="agency_pkey" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(2000)" />
            <column name="notes" type="VARCHAR(2000)" />
            <column name="updated_by" type="BIGSERIAL">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="update_date" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="pinned" type="SMALLINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.agency"/>
        </rollback>
    </changeSet>

    <changeSet author="hhildebrand" id="1390879803225-110">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.agency" constraintName="agency_updated_by_fkey" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="ruleform.agency"/>
    </changeSet>
    
    <changeSet author="hhildebrand" id="1390879803225-436">
        <createIndex indexName="agency_updated_by_fkey_idx" tableName="ruleform.agency" unique="false">
            <column name="updated_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
